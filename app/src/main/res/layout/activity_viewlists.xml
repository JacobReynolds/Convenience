<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pny.pny.grocery.viewlists"
    android:background="#1A3B4C"
    android:id="@+id/listView">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:width="100px"
        android:height="100px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/listScrollView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button9">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listLinearLayout"></LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button9"
        android:onClick="goBack"
        android:background="@drawable/clickablebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:width="100dp"
        android:textColor="#1A3B4C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add List"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/button9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clickablebutton"
        android:onClick="addListDialog"
        android:width="100dp"
        android:textColor="#1A3B4C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join List"
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button12"
        android:layout_alignRight="@+id/listScrollView"
        android:layout_alignEnd="@+id/listScrollView"
        android:background="@drawable/clickablebutton"
        android:onClick="joinListDialog"
        android:width="100dp"
        android:textColor="#1A3B4C" />

</RelativeLayout>